<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonRed">
        <item name="android:background">@drawable/red_gradient_rounded_button</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">52dp</item>
    </style>
    <style name="CustomButtonGrey">
        <item name="android:background">@drawable/grey_gradient_rounded_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CustomGradientButton">
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Your Text</item>
        <item name="android:icon">@drawable/ic_google</item>
    </style>
    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">8dp</item>
        <item name="color">@color/white</item>
    </style>
</resources>