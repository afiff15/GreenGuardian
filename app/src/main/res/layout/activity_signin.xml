<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_template"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/MainScreenImage"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="TAKE CARE OF YOUR PLANTS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainScreenImage" />

    <TextView
        android:id="@+id/SecondaryText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="And know what Diseases threaten your Plants"
        android:textAlignment="center"
        android:textColor="@color/greyText"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PrimaryText" />

    <include
        android:id="@+id/googleButton"
        layout="@layout/google_gradient_button"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SecondaryText" />

    <Button
        android:id="@+id/BtnGuest"
        style="@style/CustomButtonGrey"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Continue as Guest"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleButton" />

</androidx.constraintlayout.widget.ConstraintLayout>